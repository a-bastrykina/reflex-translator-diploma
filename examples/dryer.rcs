	
program Dryer {
	input in 0x01 0x02 16;
 	output out 0x03 0x04 16;
  	
  	const bool ON = 1;
  	const bool OFF = 0;
  	
	process Dryer {
		bool hands_under_dryer = in[1] local;
		bool dryer_control = out[1] local;
		state Wait {		
			if (hands_under_dryer) {
				dryer_control = ON;
				set state Work;		
			}	
		} 
		state Work {
			if (hands_under_dryer) reset timer;
			timeout 6 {
				dryer_control = OFF;
				set state Wait;
			}
		}
	}
}

