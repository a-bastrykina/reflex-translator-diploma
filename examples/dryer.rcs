program Dryer {
	input in 0x01 0x02 8;
  	output out 0x03 0x04 16;
	proc Dryer {
		bool hands_under_dryer = {in[8]} local;
		bool dryer_on = {out[0]} local;
		state Wait {		
			if (hands_under_dryer) {
				dryer_on = true;
				set state Work;		
			} else loop;	
		} 
		state Work {
			if (hands_under_dryer) loop;
			timeout 6 {
				dryer_on = false;
				set state Wait;
			}
		}
	}
}